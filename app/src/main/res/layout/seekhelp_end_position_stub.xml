<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/end_block">

    <TextView
        android:id="@+id/pic2"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="15dp"
        android:background="@drawable/textview_end_background" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_toEndOf="@+id/pic2">

        <TextView
            android:id="@+id/end_position"
            android:text="@string/seekhelp_publis_position"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/end_detail_position"
            android:layout_below="@+id/end_position"
            android:text="@string/seekhelp_publis_detail_position"
            android:textSize="12sp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <View
            android:id="@+id/end_line"
            android:layout_below="@+id/end_detail_position"
            android:layout_alignStart="@+id/end_position"
            android:layout_width="match_parent"
            android:layout_alignEnd="@+id/end_position"
            android:layout_height="1dp"
            android:background="@color/line_color"/>

    </RelativeLayout>
</RelativeLayout>
