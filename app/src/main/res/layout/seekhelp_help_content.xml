<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f7f7f7"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:id="@+id/title_head"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/title_color_gradient">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/seekhelp_ask_help"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textSize="20sp" />

    </RelativeLayout>

    <include
        layout="@layout/seekhelp_top_tab"/>

    <android.support.v7.widget.CardView
        android:id="@+id/contain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="6dp"
        app:cardElevation="2dp"
        app:cardCornerRadius="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <View
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/emergency_help"
                android:layout_width="162dp"
                android:layout_height="130dp"
                android:text="@string/seekhelp_alarm_help"
                android:textColor="#ffffff"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:background="@drawable/circle_button"/>

            <Button
                android:id="@+id/normal_help"
                android:layout_width="152dp"
                android:layout_height="120dp"
                android:text="@string/seekhelp_normal_help"
                android:textColor="#ffffff"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:background="@drawable/circle_button_normal"/>

            <Button
                android:id="@+id/alarm_help"
                android:layout_width="84dp"
                android:layout_height="52dp"
                android:textColor="#ffffff"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:background="@drawable/circle_button_alram"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
