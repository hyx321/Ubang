<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/contain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        app:cardElevation="2dp"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/name"
                android:layout_marginTop="5dp"
                android:layout_marginStart="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/seekhelp_danger_help_name"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/name_text"
                android:layout_alignTop="@+id/name"
                android:layout_marginStart="15dp"
                android:layout_toEndOf="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/seekhelp_danger_help_name"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/sex"
                android:layout_below="@+id/name"
                android:layout_width="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_alignStart="@+id/name"
                android:layout_height="wrap_content"
                android:text="@string/seekhelp_danger_help_sex"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/sex_text"
                android:layout_alignTop="@+id/sex"
                android:layout_marginStart="15dp"
                android:layout_toEndOf="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/seekhelp_danger_help_sex"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/phone"
                android:layout_below="@+id/sex"
                android:layout_width="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_alignStart="@+id/name"
                android:layout_height="wrap_content"
                android:text="@string/seekhelp_danger_help_phone"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/phone_text"
                android:layout_alignTop="@+id/phone"
                android:layout_marginStart="15dp"
                android:layout_toEndOf="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/seekhelp_danger_help_phone"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/city"
                android:layout_below="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_alignStart="@+id/name"
                android:text="@string/seekhelp_danger_help_city"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/city_text"
                android:layout_alignTop="@+id/city"
                android:layout_marginStart="15dp"
                android:layout_toEndOf="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/seekhelp_danger_help_city"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/address"
                android:layout_marginTop="5dp"
                android:layout_alignStart="@+id/name"
                android:layout_below="@+id/city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/seekhelp_danger_help_address"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/address_text"
                android:layout_alignTop="@+id/address"
                android:layout_marginStart="15dp"
                android:layout_toEndOf="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/seekhelp_danger_help_address"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/detail_address"
                android:layout_marginTop="5dp"
                android:layout_alignStart="@+id/name"
                android:layout_below="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/seekhelp_danger_help_detail_address"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/detail_address_text"
                android:layout_alignTop="@+id/detail_address"
                android:layout_marginStart="15dp"
                android:layout_toEndOf="@+id/detail_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/seekhelp_danger_help_detail_address"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/latlng"
                android:layout_below="@+id/detail_address"
                android:layout_width="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_alignStart="@+id/name"
                android:layout_height="wrap_content"
                android:text="@string/seekhelp_danger_help_latLng"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/latlng_text"
                android:layout_alignTop="@+id/latlng"
                android:layout_marginStart="15dp"
                android:layout_toEndOf="@+id/latlng"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/seekhelp_danger_help_latLng"
                android:textSize="15sp"
                android:layout_marginBottom="5dp"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
